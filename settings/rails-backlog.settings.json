{
	"permissions": {
		"defaultMode": "default"
	},
	"systemPromptFiles": ["system-prompts/rails-backlog-coordinator-prompt.md"],
	"hooks": {
		"UserPromptSubmit": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "echo \"Rails Backlog Task Coordinator: Analyze backlog tasks and coordinate specialized sub-agents. Always use backlog CLI with --plain flag.\""
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "bun run $CLAUDE_PROJECT_DIR/hooks/cc-stop.ts"
					}
				]
			}
		]
	}
}
