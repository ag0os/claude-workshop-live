{
	"permissions": {
		"defaultMode": "default"
	},
	"systemPromptFiles": ["system-prompts/plan-coordinator-prompt.md"],
	"hooks": {
		"UserPromptSubmit": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "echo \"Implementation Plan Coordinator: You coordinate sub-agents to implement plans. You delegate work, you don't implement yourself.\""
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "bun run $CLAUDE_PROJECT_DIR/hooks/cc-stop.ts"
					}
				]
			}
		]
	}
}
